<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/app_theme_background</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/app_theme_background</item>
        <item name="colorPrimaryDark">@color/app_theme_background</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="MovieDetailsInfoButtonStyle">
        <item name="android:textSize">@dimen/movie_details_text_size_info_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">@dimen/movie_details_padding_info_button</item>
        <item name="android:paddingStart">@dimen/movie_details_padding_info_button</item>
        <item name="android:layout_margin">@dimen/movie_details_margin_info_button</item>
    </style>

    <style name="MovieDetailOverviewButtonStyle">
        <item name="android:textSize">@dimen/movie_details_text_size_info_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
